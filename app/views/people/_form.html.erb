<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this @person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Tipo_de_documento %>
    <%= f.select :type_document,Person::TYPE_IDENTIFICATION_OPTIONS%>
  </div>

  <div class="field">
    <%= f.label :Numero_de_documento %>
    <%= f.number_field :document %>
  </div>

  <div class="field">
    <%= f.label "Nombre(s)" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "Apellido(s)" %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :Correo %>
    <%if params[:action] == "new" %>
      <%= f.text_field :email, value: @user.email %>
    <%else%>
      <%= f.text_field :email, value: current_user.email %>
    <% end -%>
  </div>

  <div class="field">
    <%= f.label :Telefono %>
    <%= f.number_field :phone %>
  </div>

  <div class="field">
  <%if user_signed_in? %>
    <%= f.hidden_field :user_id, value: @user.id %>
  <% end -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
